{% extends 'base.html.twig' %}

{% block title %}Lesson{% endblock %}

{% block body %}
    <h1>Lesson</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lesson.id }}</td>
            </tr>
            <tr>
                <th>Lesson_name</th>
                <td>{{ lesson.lessonName }}</td>
            </tr>
            <tr>
                <th>Lesson_pose</th>
                <td>{{ lesson.lessonPose }}</td>
            </tr>
            <tr>
                <th>Lesson_pose_num</th>
                <td>{{ lesson.lessonPoseNum }}</td>
            </tr>
            <tr>
                <th>Lesson_teacher</th>
                <td>{{ lesson.lessonTeacher }}</td>
            </tr>
            <tr>
                <th>Lesson_date</th>
                <td>{{ lesson.lessonDate ? lesson.lessonDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_lesson_index') }}">back to list</a>

    <a href="{{ path('app_lesson_edit', {'id': lesson.id}) }}">edit</a>

    {{ include('lesson/_delete_form.html.twig') }}
{% endblock %}
